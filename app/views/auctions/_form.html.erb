<%= render "layouts/errors", :object => @auction %>

<%= form_for [@auction] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :start_date %>
  <%= f.datetime_select :start_date %>
  <%= f.label :end_date %>
  <%= f.datetime_select :end_date %>
  <%= f.submit %>
<% end %>
